<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_lnm_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:elevation="4dp"
        android:id="@+id/lnm_title"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_centerHorizontal="true"
        android:background="?attr/colorPrimaryDark"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="每天都要好好的，加油！"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/tv_start_lnm"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_white"
        android:gravity="center"
        android:text="锁 机 学 习"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnm_title" />

    <TextView
        android:id="@+id/tv_check_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/ic_safe"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="权限核对"
        app:layout_constraintBottom_toBottomOf="@+id/tv_start_lnm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnm_title" />

    <TextView
        android:id="@+id/tv_lnm_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_safe"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="选背景图"
        app:layout_constraintBottom_toBottomOf="@+id/tv_start_lnm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnm_title" />


    <TextView
        android:id="@+id/tv_bai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="白  名  单"
        android:textColor="?attr/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_lnm_main" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_lnm_main"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
