<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <androidx.appcompat.widget.Toolbar
            app:contentInsetStart="0dp"
            android:id="@+id/toolbar_plan_jwk"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/popup_theme">
            <!--android:background="?attr/colorPrimary"-->

            <RelativeLayout
                android:id="@+id/rl_close_jwk_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:drawablePadding="5dp"
                    android:layout_marginStart="16dp"
                    android:drawableStart="@drawable/ic_close"
                    android:gravity="center"
                    android:id="@+id/tv_lnm_record_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="学习统计"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />


                <ImageView
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:id="@+id/iv_share_lnm"
                    android:src="@drawable/share_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            app:tabIndicatorFullWidth="false"
            android:id="@+id/tabs_lnm_record"
            android:layout_width="match_parent"
            android:layout_height="36dp" />


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_lnm_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>